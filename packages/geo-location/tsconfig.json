{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts",
    "src/application/services/hybrid-geo-location.service.ts",
    "src/application/services/wifi-context-builder.service.ts",
    "src/application/services/wifi-positioning.service.ts",
    "src/infrastructure/adapters/wifi-context-builder.service.ts",
    "src/infrastructure/adapters/wifi-positioning.service.ts",
    "src/infrastructure/adapters/wifi/**/*",
    "src/infrastructure/adapters/wifi-positioning/**/*",
    "src/infrastructure/adapters/existing-geo-adapter.ts",
    "src/infrastructure/adapters/ipwhois-geo-location.adapters.ts",
    "src/infrastructure/detection/**/*",
    "src/domain/services/geo-triangulation-positioning.service.ts",
    "src/domain/services/geo-context.service.ts",
    "src/domain/services/geo-location.service.ts",
    "src/domain/services/geo.validator.ts",
    "src/domain/services/validator.token.ts",
    "src/domain/entities/wifi-access-point.entity.ts",
    "src/domain/value-objects/wifi-signal.value-object.ts",
    "src/domain/ports/iwifi-scanner.port.ts",
    "src/domain/ports/iwifi-positioning.port.ts",
    "src/domain/ports/wifi-scanner.token.ts",
    "src/domain/ports/ilocation-detection.strategy.ts",
    "src/presentation/components/wifi-*.ts",
    "src/presentation/components/geo-widget.component.ts",
    "src/presentation/components/wifi-scan-button/**/*",
    "src/presentation/components/wifi-signal-indicator/**/*"
  ]
}