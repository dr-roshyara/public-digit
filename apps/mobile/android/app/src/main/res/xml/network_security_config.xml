<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext (HTTP) traffic for development -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Specific domains for development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android Emulator -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">192.168.178.27</domain> <!-- Your local IP -->
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
</network-security-config>
